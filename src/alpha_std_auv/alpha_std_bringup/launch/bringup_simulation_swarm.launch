<launch>

    <!--
        List of the simulated worlds in the 'alpha_stonefish'
    -->
    <arg name="robot_name" default=""/>
    <arg name="scenario" default="ocean_swarm"/>
    
    <include file="$(find alpha_std_stonefish)/launch/simulation.launch">
        <arg name="robot_name" value="$(arg robot_name)"/>
        <arg name="scenario" value="$(arg scenario)"/>
    </include>

    <group>
        <include file="$(find alpha_std_bringup)/launch/include/control.launch.xml">
            <arg name="robot_name" value="leader"/>
        </include>

        <include file="$(find alpha_std_bringup)/launch/include/description.launch.xml">
            <arg name="robot_name" value="leader"/>
        </include>

        <include file="$(find alpha_std_bringup)/launch/include/localization.launch.xml">
            <arg name="robot_name" value="leader"/>
            <arg name="is_sim" value="true"/>
        </include>
    </group>

    <group>
        <include file="$(find alpha_std_bringup)/launch/include/control.launch.xml">
            <arg name="robot_name" value="follower"/>
        </include>

        <include file="$(find alpha_std_bringup)/launch/include/description.launch.xml">
            <arg name="robot_name" value="follower"/>
        </include>

        <include file="$(find alpha_std_bringup)/launch/include/localization.launch.xml">
            <arg name="robot_name" value="follower"/>
            <arg name="is_sim" value="true"/>
        </include>
    </group>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find alpha_std_description)/rviz/config.rviz"/>

</launch>